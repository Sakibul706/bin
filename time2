#! /bin/sh

digits="
    __  ;   ___   ;   ____    ;  _  _    ;   _____  ;    __   ;   ______   ;   ___    ;   ___    ;   ___  
   /_ | ;  |__ \  ;  |___ \   ; | || |   ;  | ____| ;   / /   ;  |____  |  ;  / _ \   ;  / _ \   ;  / _ \ 
    | | ;     ) | ;    __) |  ; | || |_  ;  | |__   ;  / /_   ;      / /   ; | (_) |  ; | (_) |  ; | | | |
    | | ;    / /  ;   |__ <   ; |__   _| ;  |___ \  ; | '_ \  ;     / /    ;  > _ <   ;  \__, |  ; | | | |
    | | ;   / /_  ;   ___) |  ;    | |   ;   ___) | ; | (_) | ;    / /     ; | (_) |  ;    / /   ; | |_| |
    |_| ;  |____| ;  |____/   ;    |_|   ;  |____/  ;  \___/  ;   /_/      ;  \___/   ;   /_/    ;  \___/ 
                                                                                                  
"

show_time() {
	printf "%s\n" "$(printf "%s" "$digits" | cut -d ";" -f $1,$2 | tr -d ";")"
}


i=1
while [ "$i" -le "10" ]
do
	# echo $i
	show_time $i 2
	i=$((i+1))
done
