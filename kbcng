#! /bin/sh

notify="notify-send -u low  -t 650"

if [ "$1" = "ar" ]
then
	setxkbmap ar
	$notify "Arabic" "Is the layout"
	sleep 2
	xmodmap ~/.Xmodmap &
	exit 0
fi


kb="$(setxkbmap -query | grep layout)"

if [ "layout:     us" = "$kb" ]
then
	setxkbmap bd probhat
	$notify "Bangla Prob" "Is the layout"
	sleep 2
	xmodmap ~/.Xmodmap &

elif [ "layout:     bd" = "$kb" ] || [ "layout:     ar" = "$kb" ]
then
	setxkbmap us
	$notify "English" "Is the layout"
	sleep 2
	xmodmap ~/.Xmodmap &
fi
