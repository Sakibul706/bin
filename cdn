#!/bin/sh

alart() {
    notify-send -h string:bgcolor:\#63241a "ó°€  Done GET UP!!" "$* ended"
    mpv --loop=2 ~/.local/assets/bell.m4a
}

if [ "$1" = "u" ]
then
    countdown -up $(date -d @$(($(date '+%s') + 1200)) '+%H:%M')
    exit
fi

countdown $*  && alart "$* timmer"

sec=2400
countdown -up $(date -d @$(($(date '+%s') + sec)) '+%H:%M') && alart "$(($sec / 60))min EXT. TIME"

